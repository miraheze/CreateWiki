{
	"extends": [
		"stylelint-config-idiomatic-order",
		"stylelint-config-wikimedia/support-modern",
		"stylelint-config-wikimedia/mediawiki"
	],
	"ignoreFiles": [ "vendor/**" ],
	"reportNeedlessDisables": true,
	"rules": {
		"no-descending-specificity": null,
