{
	"name": "miraheze/create-wiki",
	"type": "mediawiki-extension",
	"description": "A MediaWiki extension to easily create new wikis on a wiki farm.",
	"homepage": "https://www.mediawiki.org/wiki/Extension:CreateWiki",
	"license": "GPL-3.0-or-later",
	"authors": [
		{
			"name": "Southparkfan"
		},
		{
			"name": "John Lewis"
		},
		{
			"name": "Paladox"
		},
		{
			"name": "Universal Omega"
		}
	],
	"support": {
		"issues": "https://phabricator.miraheze.org/tag/createwiki/",
		"wiki": "https://www.mediawiki.org/wiki/Extension:CreateWiki"
	},
	"require": {
		"composer/installers": ">=1.0.1",
		"php-ai/php-ml": "*"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "43.0.0",
		"mediawiki/mediawiki-phan-config": "0.13.0",
		"mediawiki/minus-x": "1.1.1",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.3.2"
	},
	"scripts": {
		"fix": [
			"minus-x fix .",
			"phpcbf; if [ $? -eq 1 ]; then exit 0; fi"
		],
		"test": [
			"parallel-lint . --exclude node_modules --exclude vendor",
			"minus-x check .",
			"@phpcs"
		],
		"phan": "phan -d . --long-progress-bar",
		"phpcs": "phpcs -sp --cache"
	},
	"config": {
		"prepend-autoloader": false,
		"optimize-autoloader": true,
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
